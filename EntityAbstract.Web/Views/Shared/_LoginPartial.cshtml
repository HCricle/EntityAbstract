@using Microsoft.AspNetCore.Identity
@using SharedEA.Core.DbModel.DbModels

@inject SignInManager<EaUser> SignInManager
@inject UserManager<EaUser> UserManager
@{ 
    var userAClass = "btn btn-link navbar-btn navbar-link";
}
@Html.AntiForgeryToken()
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" class="center-block text-center dropdown-toggle btn-user" data-toggle="dropdown" data-haspopup="true">
                        @UserManager.GetUserName(User)<span class="caret"></span>
                    </a>
                    <ul id="ulas" class="dropdown-menu">
                        <li><a asp-controller="Manage" asp-action="Index" class="@userAClass" title="用户详细管理">用户管理</a></li>
                        <li><a asp-controller="Manage" asp-action="GoMsg" asp-route-page="0" class="@userAClass">消息</a></li>
                        <li role="separator" class="divider"></li>
                        <li><button type="submit" class="btn btn-link center-block navbar-btn navbar-link" title="别离开我呀！">退出</button></li>
                    </ul>
                </li>
            </ul>
    </form>
    /*
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">退出</button>
            </li>
        </ul>
    </form>
    */
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Login">登陆</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Register">注册</a></li>
    </ul>
}
