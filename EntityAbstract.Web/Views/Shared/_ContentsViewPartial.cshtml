
@using SharedEA.Core.DbModel.DbModels;
@model IEnumerable<Content>
<hr />
<form method="get" class="list-group">
    <!--TODO-->
    <div>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var news = Model.ElementAt(i);
            <a class="list-item-s list-group-item" asp-route-cid="@news.Id" asp-controller="Content" asp-action="Get">
                <div class="btn-group-vertical center-block">
                    <label class="label-title label-waper btn-group text-info" title="@news.Title">@news.Title </label>
                    <label class="label-waper btn-group text-muted label-content text-desp" title="@news.CreateTime">@news.CreateTime</label>
                    <label class="label-waper btn-group text-info label-content text-desp" title="@news.Description">@news.Description</label>
                </div>
            </a>
        }
    </div>
</form>

